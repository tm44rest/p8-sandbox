pico-8 cartridge // http://www.pico-8.com
version 29
__lua__
-- double billiards

n=20  -- starting distance
r=10

function _init()
	t=0
	cls(1)
	circ(64,64,r,7)
	x_t=64		 -- x coord of tangent
	y_t=64-r -- y coord of tangent
	x_0=64-n -- x coord of start
	y_0=64-r	-- y coord of start
end

function _update()
	t+=1
end

function _draw()
	if t%30==0 then
		line(x_0,y_0,x_t,y_t,10)
	end
end
